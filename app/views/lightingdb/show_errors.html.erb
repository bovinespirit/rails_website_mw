<% if flash[:notice] -%>
  <div class="error">
    <%= flash[:notice] %>
  </div>
<% end -%>

<table class="border">
 <tr>
   <th>Error</th>
   <th>Name</th>
   <th>Description</th>
 </tr>
 <% for error in @lantern.error_messages -%>
   <tr>
     <% if error.long_description -%>
       <td><%= link_to error.error, showerror_url(:manufacturer => @lantern.manufacturer.name, :lantern => @lantern.name, :error => error.error) %></td>
     <% else -%>
       <td><%= error.error %></td>
     <% end -%>
     <td><%= error.name %></td>
     <td><%= error.short_description %></td>
   </tr>
  <% end -%>
</table>
<dl>
  <dt><%= link_to "Return to " + @lantern.name + " information", showlantern_url(:manufacturer => @lantern.manufacturer.name, :lantern => @lantern.name) %></dt>
  <dt><%= link_to "Return to index", :action => :index %></dt>
</dl>
