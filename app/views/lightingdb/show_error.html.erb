<% content_for 'style' do -%>
   dd {
           padding-left: 2em;
           }
   dt {
           padding-top: 0.5em;
           }
<% end -%>

<% info = {:manufacturer => @lantern.manufacturer.name, :lantern => @lantern.name} -%>
<dl>
  <dt>Error</dt>
  <dd><%= @error.error %></dd>
  <dt>Name</dt>
  <dd><%= @error.name %></dd>
  <dt>Short Description</dt>
  <dd><%= @error.short_description %></dd>
  <dt>Long Description</dt>
  <dd><%= @error.long_description %></dd>
  <dt><%= link_to "Return to " + @lantern.name + " error list", showerrors_url(info) %></dt>
  <dt><%= link_to "Return to " + @lantern.name + " information", showlantern_url(info) %></dt>
  <dt><%= link_to "Return to index", :action => :index %></dt>
</dl>
