<% @webpage.title = "Edit Redirection" -%>
<% content_for 'head' do -%>
  <%= javascript_include_tag :defaults %>
<% end -%>

<%= error_messages_for :redirection %>

<% form_for(:redirection, :url => redirection_path(@redirection), :html => { :method => :put }) do |f| %>
  <%= render(:partial => 'form', :locals => { :mode => 'edit', :form => f }) %>
  <p>
    <%= submit_tag "Update" %>
  </p>
<% end -%>

<%= link_to 'Show', redirection_path(@redirection) %> |
<%= link_to 'Back', redirections_path %>