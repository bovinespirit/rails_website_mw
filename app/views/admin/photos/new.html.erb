<% @webpage.title = "New Photo" -%>

<% content_for 'head' do -%>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag 'comatose_admin' %>
  <%= javascript_include_tag 'edit_photo' %>
<% end -%>

<%= error_messages_for 'photo' %>

<% form_tag(formatted_photos_url({:format => :html}), {:multipart => true, :method => :post, :id => 'photoform'}) do %>
  <%= render(:partial => 'form', :locals => { :mode => 'new' }) %>
  <%= submit_tag 'Create' %>
<% end -%>

<h3><%= link_to 'Back', formatted_photos_url(:format => :html) %></h3>

