<% @webpage.title = "Edit Photo - #{@photo.title}" %>

<% content_for 'head' do -%>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag 'comatose_admin' %>
  <%= javascript_include_tag 'edit_photo' %>
<% end -%>

<%= error_messages_for 'photo' %>

<% form_tag(formatted_photo_url(@photo, :html), {:multipart => true, :method => :put, :id => 'photoform'}) do -%>
  <%= render(:partial => 'form', :locals => { :mode => 'edit' }) %>
  <%= submit_tag %>
<% end -%>

<p>
  <%= link_to 'Back to Photo index', formatted_photos_url(:format => :html) %>
</p>